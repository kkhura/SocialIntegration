<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/toolbar" />

                <LinearLayout
                    android:id="@+id/layoutRetry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/progressWaiting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"/>

                    <com.mphrx.fisike.customview.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:padding="15dp"
                        android:text="@string/getting_user_details"
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />
                </LinearLayout>

                <com.mphrx.fisike.customview.CustomFontButton
                    android:id="@+id/btnRetry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="Looks like we need a bit longer, bear with us please"
                    android:visibility="gone" />

                <!-- Framelayout to display Fragments -->

                <FrameLayout
                    android:id="@+id/frame_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>



            <include
                android:id="@+id/rl_dialog_container"
                layout="@layout/advance_search_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/menu1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:contentDescription="menu1"
                android:padding="16dp"
                android:src="@drawable/ic_fab_add_white_24dp"
                fab:menu_backgroundColor="@color/black_opacity_80"
                fab:menu_colorNormal="@color/theme_btn_normal"
                fab:menu_colorPressed="@color/theme_btn_press"
                fab:menu_colorRipple="@color/theme_btn_press"
                fab:menu_labels_colorNormal="@color/white"
                fab:menu_labels_ellipsize="end"
                fab:menu_labels_singleLine="true"
                fab:menu_labels_textColor="@color/dusky_blue_two"
                fab:menu_shadowColor="@color/black_opacity_30"
                />
        </RelativeLayout>

        <!-- navigation drawer -->

        <LinearLayout
            android:id="@+id/only_drawer_layout"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|start"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_userDetails"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gradient_background"
                android:paddingBottom="4dp"
                android:paddingLeft="20dp"
                android:visibility="visible">

                <com.mphrx.fisike_physician.views.CircleImageView
                    android:id="@+id/imgUserPic"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="13dp"
                    android:paddingTop="0dp"
                    android:src="@drawable/default_profile_pic"
                    android:visibility="visible"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp" />

                <com.mphrx.fisike.customview.CustomFontTextView
                    android:id="@+id/txtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgUserPic"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Mr Ram Kumar"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <com.mphrx.fisike.customview.CustomFontTextView
                    android:id="@+id/tv_email_id"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:text="ramkumar@abc.com"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/carrot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_drawer" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/white"
                    android:src="@drawable/navigation_list_footer" />

                <ListView
                    android:id="@+id/left_drawer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:divider="@color/white"
                    android:dividerHeight="1dp" />


            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>