<resources>

    <style name="AppStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:editTextStyle">@style/MyEditTextViewStyle</item>
        <item name="android:autoCompleteTextViewStyle">@style/MyEditTextViewStyle</item>
        <item name="android:actionBarTabTextStyle">@style/tabtextcolor</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">@color/action_bar_bg</item>
        <item name="colorPrimary">@color/action_bar_bg</item>
        <item name="colorAccent">@color/action_bar_bg</item>

        <item name="colorControlNormal">@color/dusky_blue_70</item>
        <item name="colorControlActivated">@color/action_bar_bg_darker</item>
        <item name="android:colorActivatedHighlight">@color/dusky_blue_50</item>
        <item name="android:textColorHint">@color/dusky_blue_50</item>
        <item name="android:textColor">@color/theme_edit_text_text_color</item>
        <item name="android:textSize">12sp</item>

        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge
        </item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall
        </item>
    </style>


    <style name="ToolbarColoredBackArrow" parent="AppStyle">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppStyle.Translucent" parent="AppStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!-- your app branding color for the app bar -->
    <!-- <item name="android:colorPrimary" >@color/action_bar_bg</item> -->
    <!-- theme UI controls like checkboxes and text fields -->

    <style name="tabtextcolor" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/theme_edit_text_text_color</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/theme_edit_text_text_color</item>
    </style>

    <style name="MyEditTextViewStyle" parent="android:Widget.EditText">
        <item name="android:textColorHint">@color/theme_edit_text_hint_color_normal</item>
        <item name="android:textColor">@color/theme_edit_text_text_color</item>
    </style>

    <style name="MyButtonStyle" parent="android:Widget.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_bg</item>
        <item name="android:backgroundStacked">@color/grey_e5</item>
    </style>

    <style name="PasscodeInputItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="view_profile_row_label_style">
        <item name="android:textColor">@color/gray80</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="view_profile_row_content_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/dark_grey</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">@color/dark_grey</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <style name="ExpandedAppBarPlus1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24.5sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/dark_grey</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <style name="CollapsedAppBarPlus1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20.5sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">@color/dark_grey</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <style name="Theme.Transparent" parent="@style/AppStyle">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="TextInputStyle" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/dusky_blue_50</item>
        <item name="android:textColor">@color/theme_edit_text_text_color</item>
        <item name="android:textSize">12sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/dusky_blue_50</item>
        <item name="colorControlNormal">@color/dusky_blue_70</item>
        <item name="colorControlActivated">@color/theme_edit_text_hint_color_focused</item>
    </style>

    <style name="TextViewSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_marginLeft">-9dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/theme_edit_text_text_color</item>
    </style>


    <style name="TextErrorStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/theme_edit_text_error_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/action_bar_bg</item>

    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppStyle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppStyle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextInputStyle_white" parent="@android:style/TextAppearance">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>


    <style name="MyEditTextViewStyle_white" parent="android:Widget.EditText">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppStyle_themeWhite" parent="AppStyle">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radioButtonStyle">@style/radio_button</item>

    </style>
    <style name="myPopupMenuTextAppearanceSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/dusky_blue_two</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/dusky_blue_two</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red_500</item>
        <item name="android:textSize">12sp</item>
    </style>

    <attr name="numberPickerStyle" format="reference"/>

    <declare-styleable name="NumberPickerCustom">
        <!-- @hide Color for the solid color background if such for optimized rendering. -->
        <attr name="solidColor" format="color|reference"/>
        <!-- @hide The divider for making the selection area. -->
        <attr name="selectionDivider" format="reference"/>
        <!-- @hide The height of the selection divider. -->
        <attr name="selectionDividerHeight" format="dimension"/>
        <!-- @hide The distance between the two selection dividers. -->
        <attr name="selectionDividersDistance" format="dimension"/>
        <!-- @hide The min height of the NumberPickerCustom. -->
        <attr name="internalMinHeight" format="dimension"/>
        <!-- @hide The max height of the NumberPickerCustom. -->
        <attr name="internalMaxHeight" format="dimension"/>
        <!-- @hide The min width of the NumberPickerCustom. -->
        <attr name="internalMinWidth" format="dimension"/>
        <!-- @hide The max width of the NumberPickerCustom. -->
        <attr name="internalMaxWidth" format="dimension"/>
        <!-- @hide The layout of the number picker. -->
        <attr name="internalLayout" format="reference"/>
        <!-- @hide The drawable for pressed virtual (increment/decrement) buttons. -->
        <attr name="virtualButtonPressedDrawable" format="reference"/>
    </declare-styleable>

    <style name="NPWidget">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ThemeOverlay.AppCompat.Light" parent="Base.ThemeOverlay.AppCompat.Light"/>




    <style name="NPWidget.NumberPicker">
        <item name="android:orientation">vertical</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">50dip</item>
    </style>

    <style name="radio_button" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/dusky_blue</item>
        <item name="colorControlHighlight">@color/action_bar_bg</item>
        <item name="colorControlActivated">@color/action_bar_bg</item>
    </style>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

</resources>
